{
  "name": "jewelry-invoice-pro",
  "version": "1.0.0",
  "description": "Professional invoicing solution for jewelry businesses",
  "main": "main.js",
  "author": "Alan Vargas Jewelry",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.jewelryinvoicepro.app",
    "productName": "Jewelry Invoice Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "../index.html",
      "../styles.css",
      "../app.js",
      "../price-data.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Jewelry Invoice Pro"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
